<p id="notice"><%= notice %></p>

<h1 align="center">Usuarios</h1>
<div class="table-striped">
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Fecha de Nacimiento</th>
        <th>Edad</th>
        <th>Telefono</th>
        <th>Número de Emergencia</th>
        <th>CURP</th>
        <th>IMSS</th>
        <th>RFC</th>
        <th>ID</th>
        <th>Fecha de Admisión</th>
        <th>Area</th>
        <th>Jefe</th>
        <th>Salario</th>
        <th>Posición</th>
        <th colspan="3"></th>
      </tr>
    </thead>
</div>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.birthdate %></td>
        <td><%= user.age %></td>
        <td><%= user.phone %></td>
        <td><%= user.emergency_number %></td>
        <td><%= user.curp %></td>
        <td><%= user.imms %></td>
        <td><%= user.rfc %></td>
        <td><%= user.employee_id %></td>
        <td><%= user.date_of_admission %></td>
        <td><%= user.area.area_name %></td>
        <td><%= user.boss %></td>
        <td><%= user.salary %></td>
        <td><%= user.role.role %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Area', new_area_path, remote: true %>
<%= link_to 'New Role', new_role_path, remote: true %>
<%= link_to 'New User', new_user_path, remote: true %> 

<div id="user-modal">
  <div id="inner-user-modal"></div>
</div>

<div id="area-modal">
  <div id="inner-area-modal"></div>
</div>

<div id="role-modal">
  <div id="inner-role-modal"></div>
</div>


