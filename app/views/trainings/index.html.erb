<p id="notice"><%= notice %></p>

<h1>Listing Trainings</h1>

<table>
  <thead>
    <tr>
      <th>Course name</th>
      <th>Topic</th>
      <th>Expositor</th>
      <th>Start date</th>
      <th>Duration</th>
      <th>Attendance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trainings.each do |training| %>
      <tr>
        <td><%= training.course_name %></td>
        <td><%= training.topic %></td>
        <td><%= training.expositor %></td>
        <td><%= training.start_date %></td>
        <td><%= training.duration %></td>
        <td><%= training.attendance_id %></td>
        <td><%= link_to 'Show', training %></td>
        <td><%= link_to 'Edit', edit_training_path(training) %></td>
        <td><%= link_to 'Destroy', training, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

